<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jdrinventory.inventory_jdr">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Inventory_JDR">

        <activity
            android:name=".ui.character.CharacterListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.character.CharacterDetailsActivity" />
        <activity android:name=".ui.character.CharacterAddActivity" />
        <activity android:name=".ui.character.CharacterEditActivity" />
        <activity android:name=".ui.tools.ToolsAddActivity" />
    </application>
</manifest>